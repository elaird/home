# https://twiki.cern.ch/twiki/bin/viewauth/CMS/ClusterUsersGuide

HOST lxplus* *.cern.ch *.fnal.gov
    GSSAPITrustDns yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes

Host cms*usr*
     Protocol 2
     ForwardAgent yes
     # ForwardX11 yes
     # ForwardX11Trusted no
     # ProxyCommand ssh lxplus.cern.ch nc %h 22

Host cmsusr cmsusr* cmsusr*.cms
     # Set up a SOCKS5 proxy on local port 1080
     DynamicForward 1080

Host cms904usr*
     # Set up a SOCKS5 proxy on local port 1081
     DynamicForward 1081

ControlMaster auto
ControlPath ~/.ssh/master_%l_%h_%p_%r
