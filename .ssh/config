# https://twiki.cern.ch/twiki/bin/viewauth/CMS/ClusterUsersGuide

Host lxplus* *.cern.ch cmslpc* *.fnal.gov
     # GSSAPITrustDns yes
     GSSAPIAuthentication yes
     GSSAPIDelegateCredentials yes

Host brux*
     ServerAliveInterval 5
     ServerAliveCountMax 30
     ControlMaster auto
     ControlPath ~/.ssh/master_%l_%h_%p_%r

Host l+cmsusr
     ProxyJump lxplus.cern.ch
     HostName cmsusr
     # ProxyCommand ssh lxplus.cern.ch nc %h 22

Host l+cms904usr
     ProxyJump lxplus.cern.ch
     HostName cms904usr
     # ProxyCommand ssh lxplus.cern.ch nc %h 22

Host *cmsusr*
     DynamicForward 1080
     Protocol 2
     ControlMaster auto
     ControlPath ~/.ssh/master_%l_%h_%p_%r

Host *cms904usr*
     DynamicForward 1081
     Protocol 2
     ControlMaster auto
     ControlPath ~/.ssh/master_%l_%h_%p_%r
